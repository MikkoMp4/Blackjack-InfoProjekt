<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>


<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mtg.blackjack.Controller.StartScreenController"
      alignment="CENTER" spacing="40"
      style="-fx-background-color: #808080;">

<!-- Logo oben -->
<ImageView fitWidth="400" pickOnBounds="true" preserveRatio="true">
    <image>
        <!-- Pfad relativ zu resources/ -->
        <Image url="@/img/Logo.png"/>
    </image>
</ImageView>

<!-- Die beiden Buttons nebeneinander -->
<HBox alignment="CENTER" spacing="30">
    <!-- Endlos-Button mit ∞-Symbol -->
    <Button fx:id="endlessButton" onAction="#onEndlessClicked" text="∞"
            style="
                  -fx-background-color: #ff0000;
                  -fx-background-radius: 20;
                  -fx-text-fill: white;
                  -fx-font-size: 24px;
                  -fx-padding: 15 40 15 40;
                "/>

    <!-- Normal-Button mit Text -->
    <Button fx:id="normalButton" onAction="#onNormalClicked" text="Normal"
            style="
                  -fx-background-color: #00aaff;
                  -fx-background-radius: 20;
                  -fx-text-fill: white;
                  -fx-font-size: 24px;
                  -fx-padding: 15 40 15 40;
                "/>
</HBox>

</VBox>
